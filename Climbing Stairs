class Solution {
    public int climbStairs(int n) {
        if (n == 1) return 1;
        if (n == 2) return 2;

        int first = 1;  // ways(1)
        int second = 2; // ways(2)

        for (int i = 3; i <= n; i++) {
            int third = first + second; // ways(n) = ways(n-1) + ways(n-2)
            first = second;
            second = third;
        }

        return second;
    }
}
