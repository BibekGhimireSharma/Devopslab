class Solution {
    public int triangleNumber(int[] nums) {
        if (nums == null || nums.length < 3) return 0;
        Arrays.sort(nums);                // sort ascending
        int n = nums.length;
        int count = 0;
        // pick the largest side as nums[k]
        for (int k = n - 1; k >= 2; k--) {
            int left = 0, right = k - 1;
            while (left < right) {
                // if nums[left] + nums[right] > nums[k], then
                // all values between left..right-1 with nums[right] also work
                if (nums[left] + nums[right] > nums[k]) {
                    count += (right - left);
                    right--;
                } else {
                    left++;
                }
            }
        }
        return count;
    }
}
