class Solution {
    public int reverse(int x) {
        boolean negative = x < 0;
        StringBuilder sb = new StringBuilder(Integer.toString(Math.abs(x)));
        sb.reverse();
        long reversedNum = Long.parseLong(sb.toString()); 
        
        if (negative) reversedNum = -reversedNum;
        if (reversedNum < Integer.MIN_VALUE || reversedNum > Integer.MAX_VALUE) return 0;
        
        return (int) reversedNum;
    }
}
